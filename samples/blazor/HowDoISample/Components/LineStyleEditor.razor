<fieldset class="rounded px-3 border">
    <legend class="d-inline-block px-2 w-auto">Center Pen</legend>
    <div class="form-group row">
        <label for="centerpen-color" class="col-sm-2 col-form-label">Color</label>
        <div class="col-sm-10">
            <input type="text" @bind-value="@Style.CenterPenColor" @bind-value:event="oninput" class="form-control" id="centerpen-color" />
        </div>
    </div>

    <div class="form-group row">
        <label for="centerpen-alpha" class="col-sm-2 col-form-label">Alpha</label>
        <div class="col-sm-10">
            <input type="number" @bind-value="@Style.CenterPenAlpha" @bind-value:event="oninput" class="form-control" id="centerpen-alpha" min="0" max="255" />
        </div>
    </div>

    <div class="form-group row">
        <label for="centerpen-width" class="col-sm-2 col-form-label">Width</label>
        <div class="col-sm-10">
            <input type="number" @bind-value="@Style.CenterPenWidth" @bind-value:event="oninput" class="form-control" id="centerpen-width" min="0" />
        </div>
    </div>
</fieldset>

